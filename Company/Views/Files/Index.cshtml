@model IEnumerable<Company.Models.File>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h5>
    <a href="~/Home/Search">
        <input type="submit" value="الرجوع الى قائمة البحث" />
    </a>
</h5>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.exporters.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.OrderNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            
            @Html.DisplayFor(modelItem => item.ExporterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.OrderNo)
        </td>
        <td>
            <a href="~/Uploads/@Html.DisplayFor(model=>item.Image)" download="photo">
                <img src="~/Uploads/@Html.DisplayFor(model=>item.Image)"
                     class="thumbnail" style="width:50px;height:80px;" />

            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
