@model IEnumerable<Company.Models.Exporter>

@{
    ViewBag.Title = "المصدرين";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الشركات المصدرة</h2>

<a href="~/Home/MainMenu">
    <input type="submit" value="العودة الى القائمة الرئيسية" />
</a>

<p>
    @Html.ActionLink("انشاء شركة مصدرة جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
            @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
