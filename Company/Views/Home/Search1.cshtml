@model IEnumerable<Company.Models.Orders>

<br /><br />
@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />
}

<table>
    <thead>
        <tr>
            <th>Order No</th>
            <th>Order Note</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.OrderNo</td>
                    <td>@item.Note</td>

                </tr>
            }
        }
    </tbody>
</table>

